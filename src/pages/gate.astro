---
const siteKey = "0x4AAAAAACZlhb6gyAukDyMx";
const next = Astro.url.searchParams.get("next") ?? "/";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Human verification</title>

    <!-- Cloudflare Turnstile -->
    <script
      src="https://challenges.cloudflare.com/turnstile/v0/api.js"
      async
      defer
    ></script>
  </head>

  <body class="gate">
    <main class="card">
      <h1>正在验证</h1>
      <p class="desc">
        正常用户将自动通过，请稍候…
      </p>

      <!-- Turnstile（Managed 模式：必要时才显示勾选） -->
      <div class="cf-turnstile" data-sitekey={siteKey}></div>
    </main>

    <!-- 自动检测 token → 校验 → 跳转 -->
    <script define:vars={{ next }}>
      // 每 400ms 检查一次 Turnstile 是否已生成 token
      const timer = setInterval(async () => {
        const tokenEl = document.querySelector(
          'input[name="cf-turnstile-response"]'
        );

        const token = tokenEl?.value;
        if (!token) return;

        // 拿到 token 后立刻停止轮询
        clearInterval(timer);

        try {
          const res = await fetch("/api/turnstile-verify", {
            method: "POST",
            headers: { "content-type": "application/json" },
            body: JSON.stringify({ token, next }),
          });

          if (!res.ok) throw new Error("verify failed");

          const data = await res.json();
          location.replace(data.redirect || "/");
        } catch (e) {
          alert("验证失败，请刷新页面重试");
        }
      }, 400);
    </script>

    <!-- 样式：简单但不丑 -->
    <style>
      body.gate {
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f7f8fb, #eef1f6);
        font-family: system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", sans-serif;
      }

      .card {
        background: #fff;
        width: 100%;
        max-width: 420px;
        padding: 32px 28px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
      }

      h1 {
        margin: 0 0 10px;
        font-size: 22px;
        font-weight: 600;
      }

      .desc {
        margin: 0 0 18px;
        font-size: 14px;
        color: #666;
        line-height: 1.6;
      }
    </style>
  </body>
</html>

